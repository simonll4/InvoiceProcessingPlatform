# Pipeline LLM (Groq)
PIPELINE_LLM_PROVIDER=groq
PIPELINE_LLM_API_BASE=https://api.groq.com/openai/v1
PIPELINE_LLM_MODEL=llama-3.3-70b-versatile
PIPELINE_LLM_API_KEY=your-groq-api-key
PIPELINE_LLM_ALLOW_STUB=false

# Rate Limits (Groq free tier safe defaults)
RATE_LIMIT_RPM=24
RATE_LIMIT_RPD=11500
RATE_LIMIT_TPM=4800
RATE_LIMIT_TPD=400000

# Paths & Database
DB_URL=sqlite:///data/app.db
UPLOAD_DIR=data/uploads
# DB_PATH=data/app.db  # descomenta para forzar ruta espec√≠fica

# Defaults
DEFAULT_CURRENCY=USD
MAX_CONCURRENCY=1
PDF_OCR_DPI=300
PDF_OCR_MAX_PAGES=5
TEXT_MIN_LENGTH=120
