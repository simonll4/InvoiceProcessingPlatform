# Invoice Agent Configuration Example
# Copy this file to .env and fill in your values

# API Settings
INVOICE_AGENT_API_HOST=0.0.0.0
INVOICE_AGENT_API_PORT=7003

# Groq API (LLM)
# Get your API key from: https://console.groq.com/keys
INVOICE_AGENT_GROQ_API_KEY=your_groq_api_key_here
INVOICE_AGENT_GROQ_MODEL=llama-3.3-70b-versatile
INVOICE_AGENT_GROQ_BASE_URL=https://api.groq.com/openai/v1
INVOICE_AGENT_GROQ_TEMPERATURE=0.0
INVOICE_AGENT_GROQ_MAX_RETRIES=2

# MCP Server
# URL of the SQLite MCP server
# Docker: http://mcp-sqlite:7002
# Local: http://localhost:8200
INVOICE_AGENT_MCP_ENDPOINT=http://localhost:8200
INVOICE_AGENT_MCP_TIMEOUT=10.0

# Memory Settings
# Number of previous conversation turns to keep per session
INVOICE_AGENT_MAX_HISTORY_TURNS=5

# SQL Validation
# Maximum number of rows to return from queries
INVOICE_AGENT_SQL_MAX_ROWS=200
